{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "crash": "osascript -e 'display notification \"App crashed due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "docs/",
    "site/",
    "src/",
    "utilities/",
    "test/fixtures/",
    "test/samples/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "jst js json html scss css hbs"
}